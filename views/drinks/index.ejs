  </ul>
</nav>
</form>
</section>

<section class="main" >
  
  <div class="row row-cols-1 row-cols-md-3">
    <% if (response.drinks !== null) { response.drinks.forEach((drink) => { %>
      <div class="col mb-4">
        <div class="card h-100">
          <a href="/drinks/<%= drink.idDrink %>">
          <img src="<%= drink.strDrinkThumb %>" class="card-img-top" alt="drink-thumbnail">
        </a>
          <div class="card-body">
            <h3 class="card-title drink-name"><%= drink.strDrink %></h3>
          </div>
          <a class="btn btn-sm btn-primary" href="/drinks/<%= drink.idDrink %>">See Details</a>
          </div>
        </div>
  <% });} %>
</div>
</section>

<%- include('../partials/footer') -%>
