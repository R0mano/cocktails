<%- include('../partials/header') -%>
<section class="top" >
<form class="form-inline mr-auto" action="/drinks" method="GET">
<div class="input-group mb-3 mx-auto col-10">
  <div class="input-group-prepend">
    <label class="input-group-text" for="inputGroupSelect01">Search by</label>
  </div>
    <select name="filter" id="search-by">
      <option selected value="<%= filterOptions.byDrinkName %>">cocktail name</option>
      <option value="<%= filterOptions.byIngredientName %>">ingredient</option>
    </select>
    <input
    class="form-control col-10"
    type="search"
    placeholder="E.g. 'margarita' or 'orange juice'"
    aria-label="Search"
    name="userQuery"
  />
  <button class="form-control btn btn-outline-success col-2" type="submit">
    Search
  </button>
</div>
</form>

<form action="/drinks" method="GET">
<nav aria-label="">
  <ul class="pagination justify-content-center pagination-sm">
    <li class="page-item">
      
    <li class="page-item"><button class="page-link" name="firstLetter" value="a" type="submit">A</button></li>
    <li class="page-item"><button class="page-link" name="firstLetter" value="b" type="submit">B</button></li>
